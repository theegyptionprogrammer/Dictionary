<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <EditText
            android:id="@+id/ETEnglish" android:hint="English Word" android:layout_width="200dp"/>
    <EditText
            android:id="@+id/ETRussian" android:hint="Russian Word"
            android:layout_width="200dp" android:layout_row="1" android:layout_column="0"/>
    <Button
            android:id="@+id/Insert" android:text="Insert" android:layout_row="2" android:layout_column="0"/>
    <Button
            android:id="@+id/ENSpeaker" android:drawableLeft="@drawable/ic_mic_black_24dp" android:layout_row="0"
            android:layout_column="1"/>
</GridLayout>

