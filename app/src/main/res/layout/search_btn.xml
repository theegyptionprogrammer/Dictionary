<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <EditText
            android:id="@+id/searchBar" android:layout_width="200dp"
            android:hint="search word"/>
    <Button
            android:id="@+id/searchBTN" android:drawableLeft="@drawable/ic_search_black_24dp"/>
    <Button
            android:id="@+id/voiceSearch" android:drawableLeft="@drawable/ic_mic_black_24dp"/>
    <TextView
            android:id="@+id/Word" android:layout_width="200dp" android:layout_row="1" android:layout_marginTop="30dp"
            android:layout_column="0" android:layout_height="115dp"/>


</GridLayout>


