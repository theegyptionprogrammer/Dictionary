<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android1="http://schemas.android.com/apk/res/android"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content">
    <TextView
            android1:id="@+id/TVEnglish" android1:layout_width="200dp" android1:layout_height="50dp"
            android1:layout_row="0" android1:layout_column="0" android1:hint="English Word"/>
    <TextView
            android1:id="@+id/TVRussian" android1:layout_width="200dp" android1:layout_height="50dp"
            android1:layout_row="1" android1:layout_column="0" android1:hint="Russian Word"/>
    <Button
            android1:id="@+id/Update" android1:text="Update" android1:layout_row="0" android1:layout_column="1"/>
    <Button
            android1:id="@+id/Delete" android1:text="Delete" android1:layout_row="1" android1:layout_column="1"/>
</GridLayout>